{% extends "BubelbubSmartHomeGUIBundle::base.html.twig" %}

{% block content %}
	<div class="panel panel-default userTransparent">
		<div class="panel-heading">
			<h1 class="pull-left">{{ 'Configure centrals' }}</h1><a href="{{ path('bubelbub_smarthomegui_central_form') }}" data-target="#centralModal" class="pull-right jsmodal"><span class="glyphicon glyphicon-plus-sign"></span> {{ 'Add central' }}</a >
			<div class="clearfix"></div>
		</div>

		<div class="table-responsive">
			<table class="table">
				<thead>
				<tr>
					<th>{{ 'Name' | trans }}</th>
					<th>{{ 'Host/IP' | trans }}</th>
					<th>{{ 'Online?' }}</th>
					<th>&nbsp;</th>
				</tr>
				</thead>
				<tbody>
					{% for central in centrals %}
						<tr>
							<td>{{ central.name }}</td>
							<td>{{ central.hostname }}</td>
							<td><span class="glyphicon glyphicon-{%- if central.online -%}ok{%- else -%}remove{%- endif -%}"></span></td>
							<td>
								<a href="{{ path('bubelbub_smarthomegui_central_form', {id: central.id}) }}" data-target="#centralModal" class="btn btn-default btn-xs jsmodal">
									<span class="glyphicon glyphicon-edit"></span>
								</a>
								<a href="{{ path('bubelbub_smarthomegui_central_form', {id: central.id}) }}" data-target="#centralModal" class="btn btn-danger btn-xs">
									<span class="glyphicon glyphicon-remove"></span>
								</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock content %}
